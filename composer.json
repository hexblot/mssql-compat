{
    "name": "hexblot/mssql-compat",
    "description": "Small wrapper for PDO that emulates the deprecated mssql_* functions, and allows legacy software to work in PHP7+",
    "require": {
        "php": ">=5.3",
        "ext-pdo": "*"
    },
    "suggest": {
        "ext-pdo_dblib": "*"
    },
    "autoload": {
        "files": ["mssql_compat.php"]
    },
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Nick Andriopoulos",
            "email": "nand@hexblot.com",
            "homepage": "http://www.hexblot.com",
            "role": "Developer"
        }
    ],
    "support": {
      "source": "https://github.com/hexblot/mssql-compat",
      "issues": "https://github.com/hexblot/mssql-compat/issues"
    },
    "minimum-stability": "dev"
}
